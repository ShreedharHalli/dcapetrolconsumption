        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <table class="responsive-table valign-wrapper">
                    <thead class="left" style="margin-left: -35px;">
                        <tr>
                            <th>Date & Time</th>
                            <th>Opening Reading</th>
                            <th>Photo</th>
                            <th>Closing Reading</th>
                            <th>Photo</th>
